<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="19dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#1ECDE8"
                android:endColor="#549EFF"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="50dp"
                />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"
                />
        </shape>
    </item>
</selector>