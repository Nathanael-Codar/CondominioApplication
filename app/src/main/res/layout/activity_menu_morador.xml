<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_morador"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:layout_marginTop="16dp"
        android:text="MENU DE CONTROLE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bt_atualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="150dp"
        android:background="@drawable/botao1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="MORADORES"
        android:textColor="#F8F4F4" />

    <Button
        android:id="@+id/bt_visitante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/botao1"
        android:text="AUTORIZAR VISITANTE"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#F8F4F4" />

    <Button
        android:id="@+id/bt_sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:background="@drawable/botao1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="SAIR"
        android:textColor="#F8F4F4" />

</LinearLayout>