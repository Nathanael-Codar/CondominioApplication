<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_marginTop="1sp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="ATUALIZAR CADASTRO DE MORADORES"
            android:textSize="30sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="16dp" />


        <TextView
            android:id="@+id/textesposo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Esposo"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="250dp" />


        <EditText
            android:id="@+id/edit_nome_pai"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="NOME COMPLETO"
            android:inputType="text"
            android:maxLength="50"
            android:layout_margin="50dp"
            android:padding="10dp"
            android:textColorHint="#D70E0E0E"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="212dp" />


        <EditText
            android:id="@+id/edit_cpf_pai"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="CPF"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:layout_margin="50dp"
            android:maxLength="50"
            android:padding="10dp"
            android:textColorHint="#D70E0E0E"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="212dp" />

        <EditText
            android:id="@+id/edit_tel_pai"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="TELEFONE (CEL)"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:layout_margin="50dp"
            android:maxLength="50"
            android:padding="10dp"
            android:textColorHint="#D70E0E0E"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="212dp" />

        <TextView
            android:id="@+id/text_esposa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Esposa"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="250dp" />


        <EditText
            android:id="@+id/edit_nome_mae"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="NOME COMPLETO"
            android:inputType="text"
            android:maxLength="50"
            android:layout_margin="50dp"
            android:padding="10dp"
            android:textColorHint="#D70E0E0E"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="212dp" />



        <EditText
            android:id="@+id/edit_cpf_mae"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="CPF"
            android:inputType="text"
            android:gravity="center"
            android:layout_marginRight="50dp"
